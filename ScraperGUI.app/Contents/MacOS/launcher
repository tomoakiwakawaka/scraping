#!/usr/bin/env bash
# Launcher for Scraper GUI macOS app bundle
# Finds the project root (assumes the .app is placed inside the project root folder)
set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
# Contents/MacOS -> Contents -> ScraperGUI.app -> project root => go up 3
PROJECT_ROOT="$(cd "$SCRIPT_DIR/../../.." && pwd)"
# prefer project's virtualenv
PY="$PROJECT_ROOT/.venv/bin/python"
if [ ! -x "$PY" ]; then
  PY="$(command -v python3 || command -v python)"
fi
exec "$PY" "$PROJECT_ROOT/scraper_gui.py" "$@"
